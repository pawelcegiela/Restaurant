<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_dishes"
    app:startDestination="@id/DishesMainFragment">

    <fragment
        android:id="@+id/DishesMainFragment"
        android:name="pi.restaurant.management.fragments.dishes.DishesMainFragment"
        android:label="@string/dishes"
        tools:layout="@layout/fragment_item_list">

        <action
            android:id="@+id/actionDishesToAddDish"
            app:destination="@id/AddDishFragment" />

        <action
            android:id="@+id/actionDishesToEditDish"
            app:destination="@id/EditDishFragment" />

        <action
            android:id="@+id/actionDishesToPreviewDish"
            app:destination="@id/PreviewDishFragment" />
    </fragment>

    <fragment
        android:id="@+id/AddDishFragment"
        android:name="pi.restaurant.management.fragments.dishes.AddDishFragment"
        android:label="@string/add_dish"
        tools:layout="@layout/fragment_modify_dish">
        <action
            android:id="@+id/actionAddDishToDishes"
            app:destination="@id/DishesMainFragment"
            app:popUpTo="@id/DishesMainFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/EditDishFragment"
        android:name="pi.restaurant.management.fragments.dishes.EditDishFragment"
        android:label="@string/edit_dish"
        tools:layout="@layout/fragment_modify_dish">
        <action
            android:id="@+id/actionEditDishToDishes"
            app:destination="@id/DishesMainFragment"
            app:popUpTo="@id/DishesMainFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/PreviewDishFragment"
        android:name="pi.restaurant.management.fragments.dishes.PreviewDishFragment"
        android:label="@string/preview_dish"
        tools:layout="@layout/fragment_preview_dish">
        <action
            android:id="@+id/actionPreviewDishToEditDish"
            app:destination="@id/EditDishFragment" />
    </fragment>

    <activity
        android:id="@+id/MainActivity"
        android:name="pi.restaurant.management.activities.MainActivity"
        android:label="Home"
        tools:layout="@layout/activity_main" />

    <activity
        android:id="@+id/DiscountsActivity"
        android:name="pi.restaurant.management.activities.DiscountsActivity"
        android:label="@string/discounts"
        tools:layout="@layout/activity_discounts" />

    <activity
        android:id="@+id/IngredientsActivity"
        android:name="pi.restaurant.management.activities.IngredientsActivity"
        android:label="@string/ingredients"
        tools:layout="@layout/activity_ingredients" />

    <activity
        android:id="@+id/AllergensActivity"
        android:name="pi.restaurant.management.activities.AllergensActivity"
        android:label="@string/allergens"
        tools:layout="@layout/activity_allergens" />

    <activity
        android:id="@+id/OrdersActivity"
        android:name="pi.restaurant.management.activities.OrdersActivity"
        android:label="@string/orders"
        tools:layout="@layout/activity_orders" />

    <activity
        android:id="@+id/RestaurantDataActivity"
        android:name="pi.restaurant.management.activities.RestaurantDataActivity"
        android:label="@string/restaurant_data"
        tools:layout="@layout/activity_restaurant_data" />

    <activity
        android:id="@+id/WorkersActivity"
        android:name="pi.restaurant.management.activities.WorkersActivity"
        android:label="@string/workers"
        tools:layout="@layout/activity_workers" />

    <activity
        android:id="@+id/SettingsActivity"
        android:name="pi.restaurant.management.activities.SettingsActivity"
        android:label="@string/action_settings"
        tools:layout="@layout/activity_settings" />

    <activity
        android:id="@+id/LogOut"
        android:name="pi.restaurant.management.activities.AuthenticationActivity"
        android:label="@string/log_out"
        tools:layout="@layout/activity_authentication">

        <argument
            android:name="logOut"
            android:defaultValue="true"
            app:argType="boolean" />
    </activity>
</navigation>