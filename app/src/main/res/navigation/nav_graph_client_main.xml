<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_client_main"
    app:startDestination="@id/ClientMainFragment">

    <fragment
        android:id="@+id/ClientMainFragment"
        android:name="pi.restaurantapp.ui.fragments.client.main.ClientMainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/actionClientMainToRestaurantData"
            app:destination="@id/ClientRestaurantDataActivity" />

        <action
            android:id="@+id/actionClientMainToNewOrder"
            app:destination="@id/ClientNewOrderActivity" />

        <action
            android:id="@+id/actionClientMainToOrders"
            app:destination="@id/ClientOrdersActivity" />

        <action
            android:id="@+id/actionClientMainToChats"
            app:destination="@id/ClientChatsActivity" />

        <action
            android:id="@+id/actionClientMainToDiscounts"
            app:destination="@id/ClientDiscountsActivity" />

        <action
            android:id="@+id/actionClientMainToNotifications"
            app:destination="@id/NotificationsActivity" />

        <action
            android:id="@+id/actionClientMainToSettings"
            app:destination="@id/ClientSettingsActivity" />
    </fragment>

    <activity
        android:id="@+id/ClientOrdersActivity"
        android:name="pi.restaurantapp.ui.activities.client.ClientOrdersActivity"
        android:label="@string/my_orders"
        tools:layout="@layout/activity_client_orders" />

    <activity
        android:id="@+id/ClientNewOrderActivity"
        android:name="pi.restaurantapp.ui.activities.client.ClientNewOrderActivity"
        android:label="@string/new_order"
        tools:layout="@layout/activity_client_new_order" />

    <activity
        android:id="@+id/ClientDiscountsActivity"
        android:name="pi.restaurantapp.ui.activities.client.ClientDiscountsActivity"
        android:label="@string/discounts"
        tools:layout="@layout/activity_client_discounts" />

    <activity
        android:id="@+id/ClientChatsActivity"
        android:name="pi.restaurantapp.ui.activities.client.ClientChatsActivity"
        android:label="@string/chat"
        tools:layout="@layout/activity_client_chats" />

    <activity
        android:id="@+id/ClientRestaurantDataActivity"
        android:name="pi.restaurantapp.ui.activities.client.ClientRestaurantDataActivity"
        android:label="@string/restaurant_data"
        tools:layout="@layout/activity_client_restaurant_data" />

    <activity
        android:id="@+id/NotificationsActivity"
        android:name="pi.restaurantapp.ui.activities.common.NotificationsActivity"
        android:label="@string/notification_center"
        tools:layout="@layout/activity_notifications" />

    <activity
        android:id="@+id/ClientSettingsActivity"
        android:name="pi.restaurantapp.ui.activities.client.ClientSettingsActivity"
        android:label="@string/my_account_and_preferences"
        tools:layout="@layout/activity_client_settings" />

    <activity
        android:id="@+id/LogOut"
        android:name="pi.restaurantapp.ui.activities.common.AuthenticationActivity"
        android:label="@string/log_out"
        tools:layout="@layout/activity_authentication">

        <argument
            android:name="logOut"
            android:defaultValue="true"
            app:argType="boolean" />
    </activity>

</navigation>