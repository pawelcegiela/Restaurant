<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_ingredients"
    app:startDestination="@id/IngredientsMainFragment">

    <fragment
        android:id="@+id/IngredientsMainFragment"
        android:name="pi.restaurant.management.fragments.ingredients.IngredientsMainFragment"
        android:label="@string/ingredients"
        tools:layout="@layout/fragment_item_list">

        <action
            android:id="@+id/actionIngredientsToAddIngredient"
            app:destination="@id/AddIngredientFragment" />

        <action
            android:id="@+id/actionIngredientsToEditIngredient"
            app:destination="@id/EditIngredientFragment" />

        <action
            android:id="@+id/actionIngredientsToPreviewIngredient"
            app:destination="@id/PreviewIngredientFragment" />
    </fragment>

    <fragment
        android:id="@+id/AddIngredientFragment"
        android:name="pi.restaurant.management.fragments.ingredients.AddIngredientFragment"
        android:label="@string/add_ingredient"
        tools:layout="@layout/fragment_modify_ingredient">
        <action
            android:id="@+id/actionAddIngredientToIngredients"
            app:destination="@id/IngredientsMainFragment"
            app:popUpTo="@id/IngredientsMainFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/EditIngredientFragment"
        android:name="pi.restaurant.management.fragments.ingredients.EditIngredientFragment"
        android:label="@string/edit_ingredient"
        tools:layout="@layout/fragment_modify_ingredient">
        <action
            android:id="@+id/actionEditIngredientToIngredients"
            app:destination="@id/IngredientsMainFragment"
            app:popUpTo="@id/IngredientsMainFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/PreviewIngredientFragment"
        android:name="pi.restaurant.management.fragments.ingredients.PreviewIngredientFragment"
        android:label="@string/preview_ingredient"
        tools:layout="@layout/fragment_preview_ingredient">
        <action
            android:id="@+id/actionPreviewIngredientToEditIngredient"
            app:destination="@id/EditIngredientFragment" />
        <action
            android:id="@+id/actionPreviewIngredientToIngredients"
            app:destination="@id/IngredientsMainFragment"
            app:popUpTo="@id/IngredientsMainFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <activity
        android:id="@+id/MainActivity"
        android:name="pi.restaurant.management.activities.MainActivity"
        android:label="Home"
        tools:layout="@layout/activity_main" />

    <activity
        android:id="@+id/DiscountsActivity"
        android:name="pi.restaurant.management.activities.DiscountsActivity"
        android:label="@string/discounts"
        tools:layout="@layout/activity_discounts" />

    <activity
        android:id="@+id/DishesActivity"
        android:name="pi.restaurant.management.activities.DishesActivity"
        android:label="@string/dishes"
        tools:layout="@layout/activity_dishes" />

    <activity
        android:id="@+id/AllergensActivity"
        android:name="pi.restaurant.management.activities.AllergensActivity"
        android:label="@string/allergens"
        tools:layout="@layout/activity_allergens" />

    <activity
        android:id="@+id/OrdersActivity"
        android:name="pi.restaurant.management.activities.OrdersActivity"
        android:label="@string/orders"
        tools:layout="@layout/activity_orders" />

    <activity
        android:id="@+id/RestaurantDataActivity"
        android:name="pi.restaurant.management.activities.RestaurantDataActivity"
        android:label="@string/restaurant_data"
        tools:layout="@layout/activity_restaurant_data" />

    <activity
        android:id="@+id/WorkersActivity"
        android:name="pi.restaurant.management.activities.WorkersActivity"
        android:label="@string/workers"
        tools:layout="@layout/activity_workers" />

    <activity
        android:id="@+id/SettingsActivity"
        android:name="pi.restaurant.management.activities.SettingsActivity"
        android:label="@string/action_settings"
        tools:layout="@layout/activity_settings" />

    <activity
        android:id="@+id/LogOut"
        android:name="pi.restaurant.management.activities.AuthenticationActivity"
        android:label="@string/log_out"
        tools:layout="@layout/activity_authentication">

        <argument
            android:name="logOut"
            android:defaultValue="true"
            app:argType="boolean" />
    </activity>
</navigation>