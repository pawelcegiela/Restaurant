<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/MainFragment">

    <fragment
        android:id="@+id/MainFragment"
        android:name="pi.restaurant.management.fragments.main.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/actionMainToDiscounts"
            app:destination="@id/DiscountsFragment" />

        <action
            android:id="@+id/actionMainToIngredients"
            app:destination="@id/IngredientsFragment" />

        <action
            android:id="@+id/actionMainToMenu"
            app:destination="@id/MenuFragment" />

        <action
            android:id="@+id/actionMainToOrders"
            app:destination="@id/OrdersFragment" />
    </fragment>

    <fragment
        android:id="@+id/DiscountsFragment"
        android:name="pi.restaurant.management.fragments.main.DiscountsFragment"
        android:label="@string/discounts"
        tools:layout="@layout/fragment_discounts" />

    <fragment
        android:id="@+id/IngredientsFragment"
        android:name="pi.restaurant.management.fragments.main.IngredientsFragment"
        android:label="@string/ingredients"
        tools:layout="@layout/fragment_ingredients" />

    <fragment
        android:id="@+id/MenuFragment"
        android:name="pi.restaurant.management.fragments.main.MenuFragment"
        android:label="@string/menu"
        tools:layout="@layout/fragment_menu" />

    <fragment
        android:id="@+id/OrdersFragment"
        android:name="pi.restaurant.management.fragments.main.OrdersFragment"
        android:label="@string/orders"
        tools:layout="@layout/fragment_orders" />

    <activity
        android:id="@+id/RestaurantDataActivity"
        android:name="pi.restaurant.management.activities.RestaurantDataActivity"
        android:label="@string/restaurant_data"
        tools:layout="@layout/activity_restaurant_data" />

    <activity
        android:id="@+id/WorkersActivity"
        android:name="pi.restaurant.management.activities.WorkersActivity"
        android:label="@string/workers"
        tools:layout="@layout/activity_workers" />

    <activity
        android:id="@+id/SettingsActivity"
        android:name="pi.restaurant.management.activities.SettingsActivity"
        android:label="@string/action_settings"
        tools:layout="@layout/activity_settings" />

    <activity
        android:id="@+id/LogOut"
        android:name="pi.restaurant.management.activities.AuthenticationActivity"
        android:label="@string/log_out"
        tools:layout="@layout/activity_authentication">

        <argument
            android:name="logOut"
            android:defaultValue="true"
            app:argType="boolean" />
    </activity>

</navigation>