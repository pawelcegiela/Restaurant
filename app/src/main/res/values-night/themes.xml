<resources>

    <style name="Theme.Restaurant" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_5</item>
        <item name="colorSecondary">@color/blue_2a</item>

        <item name="colorOnPrimary">@color/light_grey</item>

        <item name="android:textColor">@color/light_grey</item>
        <item name="alternativeTextColor">@color/light_grey</item>

        <item name="android:colorBackground">@color/dark_grey</item>
        <item name="android:colorBackgroundFloating">@color/medium_grey</item>

        <item name="android:forceDarkAllowed">false</item>
        <item name="drawerArrowStyle">@style/RestaurantDrawerArrowStyle</item>
        <item name="checkboxStyle">@style/RestaurantCheckBoxStyle</item>
        <item name="spinnerStyle">@style/RestaurantSpinnerStyle</item>
    </style>

    <style name="RestaurantDrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/light_grey</item>
    </style>

    <style name="RestaurantSpinnerStyle" parent="@style/Widget.AppCompat.Spinner">
        <item name="backgroundTint">@color/light_grey</item>
    </style>

    <style name="RestaurantCheckBoxStyle" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/light_grey</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="buttonIconTint">@color/blue_5</item>
    </style>

    <style name="RestaurantAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@color/medium_grey</item>
    </style>

    <style name="RestaurantTabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/blue_1</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@color/blue_4</item>
        <item name="android:background">@color/blue_4</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/light_grey</item>
    </style>

</resources>