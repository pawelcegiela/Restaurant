<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="pi.restaurantapp.objects.enums.ToolbarType" />

        <variable
            name="type"
            type="ToolbarType" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:background="@color/blue_4"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:visibility="@{type == ToolbarType.HIDDEN ? View.GONE : View.VISIBLE}">

        <include
            android:id="@+id/cardBack"
            layout="@layout/card_view_back"
            app:visibility="@{type == ToolbarType.BACK ? View.VISIBLE : View.GONE}"/>

        <include
            android:id="@+id/cardAdd"
            layout="@layout/card_view_add"
            app:visibility="@{type == ToolbarType.ADD ? View.VISIBLE : View.GONE}" />

        <include
            android:id="@+id/cardEdit"
            layout="@layout/card_view_edit"
            app:visibility="@{type == ToolbarType.EDIT ? View.VISIBLE : View.GONE}" />

    </LinearLayout>
</layout>