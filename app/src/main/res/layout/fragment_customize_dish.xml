<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <import type="pi.restaurantapp.ui.fragments.client.neworder.ClientCustomizeDishFragment" />

        <import type="pi.restaurantapp.ui.RecyclerManager" />

        <import type="pi.restaurantapp.ui.adapters.DishIngredientsRecyclerAdapter" />

        <import type="pi.restaurantapp.ui.adapters.DishAllergensRecyclerAdapter" />

        <import type="pi.restaurantapp.objects.enums.IngredientStatus" />

        <import type="pi.restaurantapp.objects.enums.DishType" />

        <import type="pi.restaurantapp.logic.utils.StringFormatUtils" />

        <variable
            name="fragment"
            type="pi.restaurantapp.ui.fragments.management.orders.CustomizeDishFragment" />

        <variable
            name="vm"
            type="pi.restaurantapp.viewmodels.fragments.management.orders.CustomizeDishViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="pi.restaurantapp.ui.fragments.management.orders.CustomizeDishFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:visibility="@{vm.readyToUnlock ? View.VISIBLE : View.GONE}"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <pi.restaurantapp.ui.CardViewPreviewElement
                    android:id="@+id/cardDishDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/dishHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageIcon"
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="10dp"
                                android:contentDescription="@string/icon"
                                android:padding="6dp"
                                android:src="@drawable/dish" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="15dp"
                                android:orientation="vertical">

                                <pi.restaurantapp.ui.textviews.TextViewItemName
                                    android:id="@+id/textViewName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="7dp"
                                    android:gravity="center"
                                    android:text="@{vm.item.dish.basic.name}" />

                                <pi.restaurantapp.ui.textviews.TextViewItemType
                                    android:id="@+id/textViewDishType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{DishType.getString(vm.item.dish.basic.dishType, context)}" />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textViewOriginalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginTop="20dp"
                            android:textSize="16sp"
                            android:visibility="@{vm.item.dish.basic.isDiscounted ? View.VISIBLE : View.GONE}"
                            android:text="@{StringFormatUtils.formatPrice(vm.item.dish.basic.basePrice)}" />

                        <TextView
                            android:id="@+id/textViewPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginTop="10dp"
                            android:textSize="22sp"
                            android:text="@{StringFormatUtils.formatPrice(vm.item.dish.basic.isDiscounted ? vm.item.dish.basic.discountPrice : vm.item.dish.basic.basePrice)}" />

                        <LinearLayout
                            android:id="@+id/linearLayoutDetailsUnexpanded"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <pi.restaurantapp.ui.textviews.TextViewLessMore
                                android:id="@+id/textViewDetailsMore"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="10dp"
                                android:text="@string/show_more" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutDetailsExpanded"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <pi.restaurantapp.ui.textviews.TextViewDetailTitle
                                android:id="@+id/textViewDescriptionTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="10dp"
                                android:text="@string/description_colon" />

                            <pi.restaurantapp.ui.textviews.TextViewDetail
                                android:id="@+id/textViewDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/no_dish_description" />

                            <pi.restaurantapp.ui.textviews.TextViewDetailTitle
                                android:id="@+id/textViewAmountTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="10dp"
                                android:text="@string/estimated_amount_weight_colon" />

                            <pi.restaurantapp.ui.textviews.TextViewDetail
                                android:id="@+id/textViewAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{vm.item.dish.details.amount.isEmpty() ? @string/no_amount_dish : StringFormatUtils.formatAmountWithUnit(context, vm.item.dish.details.amount, vm.item.dish.details.unit)}" />

                            <pi.restaurantapp.ui.textviews.TextViewDetailTitle
                                android:id="@+id/textViewRecipeTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="10dp"
                                android:text="@string/recipe_and_info_colon"
                                android:visibility="@{fragment instanceof ClientCustomizeDishFragment ? View.GONE : View.VISIBLE}" />

                            <pi.restaurantapp.ui.textviews.TextViewDetail
                                android:id="@+id/textViewRecipe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/no_dish_recipe"
                                android:visibility="@{fragment instanceof ClientCustomizeDishFragment ? View.GONE : View.VISIBLE}" />

                            <pi.restaurantapp.ui.textviews.TextViewLessMore
                                android:id="@+id/textViewDetailsLess"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="10dp"
                                android:text="@string/show_less" />
                        </LinearLayout>
                    </LinearLayout>

                </pi.restaurantapp.ui.CardViewPreviewElement>

                <pi.restaurantapp.ui.CardViewPreviewElement
                    android:id="@+id/cardThisOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingBottom="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <pi.restaurantapp.ui.textviews.TextViewCardTitle
                            android:id="@+id/textViewThisOrder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="20dp"
                            android:text="@string/this_order" />

                        <pi.restaurantapp.ui.textviews.TextViewDetailTitle
                            android:id="@+id/textViewTotalDishPriceTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/total_dish_price_colon" />

                        <pi.restaurantapp.ui.textviews.TextViewDetail
                            android:id="@+id/textViewTotalDishPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold" />

                        <pi.restaurantapp.ui.textviews.TextViewDetailTitle
                            android:id="@+id/textViewPortionsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/portions_colon" />

                        <include
                            android:id="@+id/numberPickerPortions"
                            layout="@layout/custom_number_picker" />

                    </LinearLayout>

                </pi.restaurantapp.ui.CardViewPreviewElement>

                <pi.restaurantapp.ui.CardViewPreviewElement
                    android:id="@+id/cardIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <pi.restaurantapp.ui.textviews.TextViewCardTitle
                            android:id="@+id/textViewIngredients"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="20dp"
                            android:text="@string/ingredients" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewBaseIngredients"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="LinearLayoutManager"
                            android:adapter="@{DishIngredientsRecyclerAdapter.createNew(vm.observer.baseIngredients, fragment, IngredientStatus.BASE)}" />

                        <pi.restaurantapp.ui.textviews.TextViewDetailTitle
                            android:id="@+id/textViewOtherIngredients"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35dp"
                            android:layout_marginBottom="20dp"
                            android:text="@string/ingredients_you_can_remove_colon" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewOtherIngredients"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="LinearLayoutManager"
                            android:adapter="@{DishIngredientsRecyclerAdapter.createNew(vm.observer.otherIngredients, fragment, IngredientStatus.OTHER)}" />

                        <pi.restaurantapp.ui.textviews.TextViewDetailTitle
                            android:id="@+id/textViewPossibleIngredients"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35dp"
                            android:layout_marginBottom="20dp"
                            android:text="@string/ingredients_you_can_add_colon" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_possible_ingredients"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="LinearLayoutManager"
                            android:adapter="@{DishIngredientsRecyclerAdapter.createNew(vm.observer.possibleIngredients, fragment, IngredientStatus.POSSIBLE)}" />

                    </LinearLayout>

                </pi.restaurantapp.ui.CardViewPreviewElement>

                <pi.restaurantapp.ui.CardViewPreviewElement
                    android:id="@+id/cardAllergens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <pi.restaurantapp.ui.textviews.TextViewCardTitle
                            android:id="@+id/textViewAllergens"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="20dp"
                            android:text="@string/allergens" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_allergens"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layoutManager="LinearLayoutManager"
                            android:adapter="@{DishAllergensRecyclerAdapter.createNew(vm.observer.allergens, fragment)}" />

                    </LinearLayout>
                </pi.restaurantapp.ui.CardViewPreviewElement>

            </LinearLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="@dimen/bottom_toolbar_height" />

        <include
            android:id="@+id/toolbarNavigation"
            layout="@layout/toolbar_navigation_preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline"
            app:type="@{vm.toolbarType}" />

        <include
            android:id="@+id/progress"
            layout="@layout/progress_bar"
            app:shouldHide="@{vm.readyToUnlock}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>