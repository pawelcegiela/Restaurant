<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <import type="pi.restaurantapp.utils.StringFormatUtils" />

        <import type="pi.restaurantapp.objects.enums.DishType" />

        <import type="pi.restaurantapp.ui.RecyclerManager" />

        <import type="pi.restaurantapp.ui.adapters.PreviewDishIngredientRecyclerAdapter" />

        <import type="pi.restaurantapp.ui.adapters.DishAllergensRecyclerAdapter" />

        <variable
            name="fragment"
            type="pi.restaurantapp.ui.fragments.management.dishes.PreviewDishFragment" />

        <variable
            name="vm"
            type="pi.restaurantapp.model.fragments.management.dishes.PreviewDishViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="pi.restaurantapp.ui.fragments.management.dishes.PreviewDishFragment">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:visibility="@{vm.readyToUnlock ? View.VISIBLE : View.GONE}"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <include
                    android:id="@+id/cardViewDisabled"
                    layout="@layout/card_view_info"
                    android:visibility="gone" />

                <pi.restaurantapp.ui.CardViewPreviewElement
                    android:id="@+id/cardDishDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/dishHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageIcon"
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="10dp"
                                android:contentDescription="@string/icon"
                                android:padding="6dp"
                                android:src="@drawable/dish" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="15dp"
                                android:orientation="vertical">

                                <pi.restaurantapp.ui.textviews.TextViewItemName
                                    android:id="@+id/textViewName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="7dp"
                                    android:gravity="center"
                                    android:text="@{vm.item.basic.name}" />

                                <pi.restaurantapp.ui.textviews.TextViewItemType
                                    android:id="@+id/textViewDishType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@{DishType.getString(vm.item.basic.dishType, context)}" />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textViewOriginalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginTop="20dp"
                            android:text="@{vm.item.basic.discounted ? vm.formatPrice(vm.item.basic.basePrice) : @string/empty_string}"
                            android:textSize="16sp"
                            android:visibility="@{vm.item.basic.discounted ? View.VISIBLE : View.GONE}" />

                        <TextView
                            android:id="@+id/textViewPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginTop="10dp"
                            android:text="@{StringFormatUtils.formatPrice(vm.item.basic.isDiscounted ? vm.item.basic.discountPrice : vm.item.basic.basePrice)}"
                            android:textSize="22sp" />

                        <LinearLayout
                            android:id="@+id/linearLayoutDetailsUnexpanded"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <pi.restaurantapp.ui.textviews.TextViewLessMore
                                android:id="@+id/textViewDetailsMore"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="10dp"
                                android:onClick="@{() -> fragment.onClickDetails(true)}"
                                android:text="@string/show_more" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutDetailsExpanded"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <pi.restaurantapp.ui.textviews.TextViewDetailTitle
                                android:id="@+id/textViewDescriptionTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="10dp"
                                android:text="@string/description_colon" />

                            <pi.restaurantapp.ui.textviews.TextViewDetail
                                android:id="@+id/textViewDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{vm.item.details.description.empty ? @string/no_dish_description : vm.item.details.description}" />

                            <pi.restaurantapp.ui.textviews.TextViewDetailTitle
                                android:id="@+id/textViewAmountTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="10dp"
                                android:text="@string/estimated_amount_weight_colon" />

                            <pi.restaurantapp.ui.textviews.TextViewDetail
                                android:id="@+id/textViewAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{StringFormatUtils.formatAmountWithUnit(context, vm.item.details.amount, vm.item.details.unit)}" />

                            <pi.restaurantapp.ui.textviews.TextViewDetailTitle
                                android:id="@+id/textViewRecipeTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="10dp"
                                android:text="@string/recipe_and_info_colon" />

                            <pi.restaurantapp.ui.textviews.TextViewDetail
                                android:id="@+id/textViewRecipe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{vm.item.details.recipe.empty ? @string/no_dish_recipe : vm.item.details.recipe}" />

                            <pi.restaurantapp.ui.textviews.TextViewLessMore
                                android:id="@+id/textViewDetailsLess"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="10dp"
                                android:onClick="@{() -> fragment.onClickDetails(false)}"
                                android:text="@string/show_less" />
                        </LinearLayout>
                    </LinearLayout>

                </pi.restaurantapp.ui.CardViewPreviewElement>

                <pi.restaurantapp.ui.CardViewPreviewElement
                    android:id="@+id/cardIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <pi.restaurantapp.ui.textviews.TextViewCardTitle
                            android:id="@+id/textViewIngredients"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="20dp"
                            android:text="@string/ingredients" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewBaseOtherIngredients"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adapter="@{PreviewDishIngredientRecyclerAdapter.createNew(vm.baseOtherIngredients, fragment)}"
                            app:layoutManager="@{RecyclerManager.createNew(context)}" />

                        <LinearLayout
                            android:id="@+id/linearLayoutIngredientsUnexpanded"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <pi.restaurantapp.ui.textviews.TextViewLessMore
                                android:id="@+id/textViewIngredientsMore"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="10dp"
                                android:onClick="@{() -> fragment.onClickIngredients(true)}"
                                android:text="@string/show_more" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutIngredientsExpanded"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <pi.restaurantapp.ui.textviews.TextViewDetailTitle
                                android:id="@+id/textViewPossibleIngredients"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="35dp"
                                android:layout_marginBottom="20dp"
                                android:text="@string/ingredients_you_can_add_colon"
                                android:visibility="@{vm.item.details.possibleIngredients.isEmpty() ? View.GONE : View.VISIBLE}" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycler_view_possible_ingredients"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adapter="@{PreviewDishIngredientRecyclerAdapter.createNew(vm.possibleIngredients, fragment)}"
                                app:layoutManager="@{RecyclerManager.createNew(context)}" />

                            <pi.restaurantapp.ui.textviews.TextViewLessMore
                                android:id="@+id/textViewIngredientsLess"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginBottom="10dp"
                                android:onClick="@{() -> fragment.onClickIngredients(false)}"
                                android:text="@string/show_less" />
                        </LinearLayout>

                    </LinearLayout>
                </pi.restaurantapp.ui.CardViewPreviewElement>

                <pi.restaurantapp.ui.CardViewPreviewElement
                    android:id="@+id/cardAllergens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="@{vm.item.details.allergens.isEmpty() ? View.GONE : View.VISIBLE}">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <pi.restaurantapp.ui.textviews.TextViewCardTitle
                            android:id="@+id/textViewAllergens"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="20dp"
                            android:text="@string/allergens" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_allergens"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adapter="@{DishAllergensRecyclerAdapter.createNew(vm.allergens, fragment)}"
                            app:layoutManager="@{RecyclerManager.createNew(context)}" />

                    </LinearLayout>
                </pi.restaurantapp.ui.CardViewPreviewElement>

            </LinearLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="@dimen/bottom_toolbar_height" />

        <include
            android:id="@+id/toolbarNavigation"
            layout="@layout/toolbar_navigation_preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline" />

        <include
            android:id="@+id/progress"
            layout="@layout/progress_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>