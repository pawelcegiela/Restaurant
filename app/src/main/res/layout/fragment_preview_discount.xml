<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="pi.restaurant.management.model.fragments.discounts.PreviewDiscountViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ui.fragments.discounts.PreviewDiscountFragment">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{vm.readyToUnlock ? View.VISIBLE : View.GONE}"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <pi.restaurant.management.ui.views.CardViewPreviewElement
                    android:id="@+id/cardDiscountDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="25dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/discountHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageIcon"
                                android:layout_width="80dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="10dp"
                                android:contentDescription="@string/icon"
                                android:padding="6dp"
                                android:src="@drawable/discount" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="15dp"
                                android:orientation="vertical">

                                <pi.restaurant.management.ui.views.TextViewItemName
                                    android:id="@+id/textViewCode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="7dp"
                                    android:text="@{vm.item.basic.id}" />

                                <pi.restaurant.management.ui.views.TextViewItemType
                                    android:id="@+id/textViewDiscount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/discount" />

                            </LinearLayout>

                        </LinearLayout>

                        <pi.restaurant.management.ui.views.TextViewDetailTitle
                            android:id="@+id/textViewDiscountValueTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/discount_value_colon" />

                        <pi.restaurant.management.ui.views.TextViewDetail
                            android:id="@+id/textViewDiscountValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <pi.restaurant.management.ui.views.TextViewDetailTitle
                            android:id="@+id/textViewThresholdTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/valid_above_total_order_value_colon" />

                        <pi.restaurant.management.ui.views.TextViewDetail
                            android:id="@+id/textViewThreshold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <pi.restaurant.management.ui.views.TextViewDetailTitle
                            android:id="@+id/textViewCreationDateTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/creation_date_colon" />

                        <pi.restaurant.management.ui.views.TextViewDetail
                            android:id="@+id/textViewCreationDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <pi.restaurant.management.ui.views.TextViewDetailTitle
                            android:id="@+id/textViewExpirationDateTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/expiration_date_colon" />

                        <pi.restaurant.management.ui.views.TextViewDetail
                            android:id="@+id/textViewExpirationDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <pi.restaurant.management.ui.views.TextViewDetailTitle
                            android:id="@+id/textViewAvailableTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/number_of_available_discounts_colon" />

                        <pi.restaurant.management.ui.views.TextViewDetail
                            android:id="@+id/textViewAvailable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <pi.restaurant.management.ui.views.TextViewDetailTitle
                            android:id="@+id/textViewAssignedTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/number_of_assigned_discounts_colon" />

                        <pi.restaurant.management.ui.views.TextViewDetail
                            android:id="@+id/textViewAssigned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <pi.restaurant.management.ui.views.TextViewDetailTitle
                            android:id="@+id/textViewRedeemedTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/number_of_redeemed_discounts_colon" />

                        <pi.restaurant.management.ui.views.TextViewDetail
                            android:id="@+id/textViewRedeemed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </pi.restaurant.management.ui.views.CardViewPreviewElement>

            </LinearLayout>

        </ScrollView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="@dimen/bottom_toolbar_height" />

        <include
            android:id="@+id/toolbarNavigation"
            layout="@layout/toolbar_navigation_preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline" />

        <include
            android:id="@+id/progress"
            layout="@layout/progress_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>