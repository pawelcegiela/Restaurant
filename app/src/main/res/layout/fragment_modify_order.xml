<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.fragments.discounts.AbstractModifyDiscountFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <pi.restaurant.management.ui.views.CardViewPreviewElement
                android:id="@+id/cardOrderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="25dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/orderHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageIcon"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:contentDescription="@string/icon"
                            android:padding="6dp"
                            android:src="@drawable/order" />

                        <EditText
                            android:id="@+id/editTextName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="15dp"
                            android:layout_marginBottom="7dp"
                            android:hint="@string/order" />

                    </LinearLayout>

                    <pi.restaurant.management.ui.views.TextViewDetailTitle
                        android:id="@+id/textViewCollectionTypeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/collection_type_colon" />

                    <Spinner
                        android:id="@+id/spinnerCollectionType"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="13dp" />

                    <pi.restaurant.management.ui.views.TextViewDetailTitle
                        android:id="@+id/textViewStatusTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/status_colon" />

                    <Spinner
                        android:id="@+id/spinnerStatus"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="13dp" />

                    <pi.restaurant.management.ui.views.TextViewDetailTitle
                        android:id="@+id/textViewFullPriceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/full_price_colon" />

                    <pi.restaurant.management.ui.views.TextViewDetail
                        android:id="@+id/textViewFullPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <pi.restaurant.management.ui.views.TextViewDetailTitle
                        android:id="@+id/textViewTypeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/type_colon" />

                    <Spinner
                        android:id="@+id/spinnerType"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="13dp" />

                    <pi.restaurant.management.ui.views.TextViewDetailTitle
                        android:id="@+id/textViewOrderDateTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/order_date_colon" />

                    <pi.restaurant.management.ui.views.TextViewDetail
                        android:id="@+id/textViewOrderDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <pi.restaurant.management.ui.views.TextViewDetailTitle
                        android:id="@+id/textViewCollectionDateTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/requested_collection_time_in_minutes_colon" />

                    <include
                        android:id="@+id/numberPickerCollectionTime"
                        layout="@layout/custom_number_picker" />

                    <pi.restaurant.management.ui.views.TextViewDetailTitle
                        android:id="@+id/textViewPlaceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/order_form_colon" />

                    <Spinner
                        android:id="@+id/spinnerPlace"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="13dp" />

                    <LinearLayout
                        android:id="@+id/linearLayoutDeliveryDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <pi.restaurant.management.ui.views.TextViewDetailTitle
                            android:id="@+id/textViewDeliveryAddressTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/delivery_address_colon" />

                        <include
                            android:id="@+id/address"
                            layout="@layout/modify_address" />

                        <pi.restaurant.management.ui.views.TextViewDetailTitle
                            android:id="@+id/textViewDeliveryPersonTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="@string/deliverer_colon" />

                        <pi.restaurant.management.ui.views.TextViewDetail
                            android:id="@+id/textViewDeliveryPerson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no_person_chosen" />

                    </LinearLayout>

                </LinearLayout>

            </pi.restaurant.management.ui.views.CardViewPreviewElement>

            <pi.restaurant.management.ui.views.CardViewPreviewElement
                android:id="@+id/cardDishes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <pi.restaurant.management.ui.views.TextViewCardTitle
                        android:id="@+id/textViewDishes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="25dp"
                        android:text="@string/dishes" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewDishes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="LinearLayoutManager" />

                    <Button
                        android:id="@+id/buttonAddDish"
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:text="@string/add_dish" />

                </LinearLayout>
            </pi.restaurant.management.ui.views.CardViewPreviewElement>

            <include
                android:id="@+id/cardSetNavigation"
                layout="@layout/card_set_navigation_modify" />

        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/progress"
        layout="@layout/progress_bar" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>