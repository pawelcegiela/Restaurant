<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.fragments.ingredients.PreviewIngredientFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <pi.restaurant.management.ui.views.CardViewPreviewElement
                android:id="@+id/cardIngredientDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ingredientHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageIcon"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:contentDescription="@string/icon"
                            android:padding="6dp"
                            android:src="@drawable/ingredient" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="15dp"
                            android:orientation="vertical">

                            <pi.restaurant.management.ui.views.TextViewItemName
                                android:id="@+id/textViewName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="7dp" />

                            <pi.restaurant.management.ui.views.TextViewItemType
                                android:id="@+id/textViewType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <pi.restaurant.management.ui.views.TextViewDetailTitle
                        android:id="@+id/textViewAmountTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/amount_colon" />

                    <pi.restaurant.management.ui.views.TextViewDetail
                        android:id="@+id/textViewAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

            </pi.restaurant.management.ui.views.CardViewPreviewElement>

            <pi.restaurant.management.ui.views.CardViewPreviewElement
                android:id="@+id/cardSubIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <pi.restaurant.management.ui.views.TextViewCardTitle
                        android:id="@+id/textViewSubIngredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="20dp"
                        android:text="@string/sub_ingredients" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewSubIngredients"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        app:layoutManager="LinearLayoutManager" />

                </LinearLayout>
            </pi.restaurant.management.ui.views.CardViewPreviewElement>

            <pi.restaurant.management.ui.views.CardViewPreviewElement
                android:id="@+id/cardContaining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <pi.restaurant.management.ui.views.TextViewCardTitle
                        android:id="@+id/textViewContaining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/ingredient_used_in" />

                    <pi.restaurant.management.ui.views.TextViewDetailTitle
                        android:id="@+id/textViewContainingDishes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/dishes" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewDishesContaining"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        app:layoutManager="LinearLayoutManager" />

                    <pi.restaurant.management.ui.views.TextViewDetailTitle
                        android:id="@+id/textViewContainingSubDishes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="@string/sub_dishes" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewSubDishesContaining"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        app:layoutManager="LinearLayoutManager" />

                </LinearLayout>
            </pi.restaurant.management.ui.views.CardViewPreviewElement>

            <include
                android:id="@+id/cardSetNavigation"
                layout="@layout/card_set_edit_back" />

        </LinearLayout>

    </ScrollView>

    <include
        android:id="@+id/progress"
        layout="@layout/progress_bar" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>